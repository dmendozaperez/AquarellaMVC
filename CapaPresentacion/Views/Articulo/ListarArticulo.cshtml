@{
    ViewBag.Title = "Lista de Articulos";
    ViewBag.SubTitle = "";
}
<style>
    .table thead {
        background-color: #5799bf;
        color: #fff;
    }

    .boton-xs-td {
        padding-top: 5px !important;
        padding-bottom: 5px !important;
    }

    .alignRight {
        text-align: right;
    }
</style>
<p class="text-primary">Esta ventana muestra los precios de los articulos.</p>

@*<button type="submit" title="Editar datos del cliente" onclick="" class="btn btn-xs btn-default btn-tabla editar-fila"><span class="fa fa-pencil text-primary"></span></button>*@

<div class="box box-body box-default">
    <div class="row">
        <div class="col-md-6">
            <a href="@Url.Action("ListarArticulo", "Articulo")" class="btn btn-info"><i class="glyphicon glyphicon-repeat"></i>&nbsp;Refresh</a>
        </div>
        <div class="col-md-6 text-right">
            <a href="@Url.Action("ListaArticulosPrecioExcel","Articulo")" class="btn btn-primary"><i class="glyphicon glyphicon-export"></i>&nbsp;&nbsp;Exportar Lista</a>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive">
                <table id="tbArticulos" class="table table-hover table-bordered compact">
                    <thead>
                        <tr>
                            <th>Categoría</th>
                            <th>Sub Categoría</th>
                            <th>Marca</th>
                            <th>Descripción</th>
                            <th>Articulo</th>
                            <th>Precio Inc(Igv)</th>
                            <th>Precio Sin(Igv)</th>
                            <th>Precio Costo</th>
                        </tr>
                    </thead>
                    <tbody data-bind="foreach:"></tbody>
                    <tfoot>
                        <tr>
                            <th>Categoría</th>
                            <th>Sub Categoría</th>
                            <th>Marca</th>
                            <th>Descripción</th>
                            <th>Articulo</th>
                            <th>Precio Inc(Igv)</th>
                            <th>Precio Sin(Igv)</th>
                            <th>Precio Costo</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script language="javascript" type="text/javascript">

    $(document).ready(function () {
        debugger
        $("body").toggleClass('sidebar-collapse');

        $('#dwlider option').attr("selected", "selected");
        $('#dwlider').selectpicker('refresh');


        $('#tbArticulos').DataTable({
            "language": {
                "url": "../Scripts/DataTables/Spanish.json"
            },
            "bServerSide": true,
            "bAutoWidth": false,
            "sAjaxSource": '@Url.Action("getListArticulosAjax", "Articulo")',
            "fnServerParams": function (aoData) {
                aoData.push({ "name": "actualizar", "value": "" });
            },
            "bdestroy": true,
            "start": 0,
            "columnDefs": [{
                "orderable": false,
                "targets": [5, 6, 7],
            }],
            "bDeferRender": true,
            "aoColumns": [
                  { "sName": "Cat_Principal", "mData": "Cat_Principal" },
                  { "sName": "SubCategoria", "mData": "SubCategoria" },
                  { "sName": "Marca", "mData": "Marca" },
                  { "sName": "Descripcion", "mData": "Descripcion" },
                  { "sName": "IdArticulo", "mData": "IdArticulo" },
                  {
                      "sName": "PrecioIgv", "mData": "PrecioIgv",
                      "sClass": "alignRight",
                      "render": function (data, type, full, meta) {
                           return "S/" + data.toFixed(2)
                      }
                  },
                  {
                      "sName": "PrecioSinIgv", "mData": "PrecioSinIgv",
                      "sClass": "alignRight",
                      "render": function (data, type, full, meta) {
                          return "S/" + data.toFixed(2)
                      }
                  },
                  {
                      "sName": "Costo", "mData": "Costo",
                      "sClass": "alignRight",
                      "render": function (data, type, full, meta) {
                          return "S/" + data.toFixed(2)
                      }
                  }
            ]
        });
    })

    </script>
}