<script>
    $(document).ready(function () {

      

        $('.table').dataTable({
            "language": {
                "url": "../Scripts/DataTables/Spanish.json"
            },
            "bServerSide": true,
            "bAutoWidth": false,
            "sAjaxSource": '@Url.Action("getUsuario", "Usuarios")',
            "bdestroy": true,
            "start": 0,
            "order": [0, "asc"],
            "bDeferRender": true,
            "aoColumns": [
                 { "sName": "usu_id", "mData": "usu_id" },
                   { "sName": "usu_nombre", "mData": "usu_nombre" },
                   { "sName": "usu_login", "mData": "usu_login", "sClass": "left" },
                   //{ "sName": "usu_tip_nom", "mData": "usu_tip_nom", "sClass": "left" },
                   { "sName": "usu_est_id", "mData": "usu_est_id", "sClass": "left" },

                    {
                        "render": function (data, type, full) {
                            return '<button title="Agregar Roles" style="border-radius:50%" class="btnrol btn btn-success"  onclick="agregarRol(' + full.usu_id + ')" data-id="' + full.usu_id + '" data-modal="" data-toggle="modal"><span class="glyphicon glyphicon-list-alt"></span></button>';
                        }
                    }



            ],
            dom: 'Bfrtip',
            buttons: [
           {
               extend: 'excelHtml5',
               title: 'Bataclub_xls'
           },
           {
               extend: 'csvHtml5',
               title: 'BataClub_csv'
           },
           {
               extend: 'pdfHtml5',
               title: 'BataClub_pdf'
           },
           'copyHtml5',
            ]
        });


    });
</script>
<script>

    $(function () {
        $(".btneditar").click(function () {
            var TeamDetailPostBackURL ="@Url.Action("Edit", "Usuarios")";
            //debugger;
            var $buttonClicked = $(this);
            waitingDialog.show('Espere un momento por favor');
            var id = $buttonClicked.attr('data-id');
            var options = { "backdrop": "static", keyboard: true };
            $.ajax({
                type: "GET",
                url: TeamDetailPostBackURL,
                contentType: "application/json; charset=utf-8",
                data: { "Id": id },
                datatype: "json",
                cache: true,
                success: function (data) {
                    //debugger;
                    waitingDialog.hide();
                    $('#myModalContent').html(data);
                    $('#myModal').modal(options);
                    $('#myModal').modal('show');
                    // debugger;

                },
                error: function () {
                    waitingDialog.hide();
                    alert("Dynamic content load failed.");
                }
            });
        });


        $("#closbtn").click(function () {
            // debugger;
            waitingDialog.hide();
            $('#myModal').modal('hide');
        });
    });    
</script>
