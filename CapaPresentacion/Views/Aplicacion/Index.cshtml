@using CapaEntidad.Control
@model IEnumerable<Ent_Aplicacion>
@{
    ViewBag.Title = "Control de Aplicaciones";
}


<p class="text-danger">Muestra la lista de Aplicaciones (Formularios Web). Permite crear nuevas Aplicación para utilizar en el Sistema y editar las existentes.</p>
<div class="box box-body box-default">

    <button type="submit" id="btnaceptar" name="btnaceptar" title="Agregar" class="nuevo btn btn-small btn-primary" data-modal="" data-toggle="modal">Agregar Aplicación</button>

    <div class="box-body" id="lista">
        @{Html.RenderPartial("ListaAplicacion", Model); }
    </div>
</div>
@section scripts{    
    @*index*@
<script>
    $(function () {
        $(".nuevo").click(function () {
            waitingDialog.show('Espere un momento por favor');
            var TeamDetailPostBackURL ="@Url.Action("Nuevo", "Aplicacion")";

            var $buttonClicked = $(this);
            //var id = $buttonClicked.attr('data-id');

            var options = { "backdrop": "static", keyboard: true };
            $.ajax({
                type: "GET",
                url: TeamDetailPostBackURL,
                contentType: "application/json; charset=utf-8",
                data: {},
                datatype: "json",
                cache: true,
                success: function (data) {
                    waitingDialog.hide();

                    //debugger;
                    $('#myModalContent').html(data);
                    $('#myModal').modal(options);
                    $('#myModal').modal('show');


                },
                error: function () {
                    waitingDialog.hide();
                    // waitingDialog.hide();
                    //removeLoading();
                    alert("Dynamic content load failed.");

                }
            });
        });


        $("#closbtn").click(function () {
            // debugger;
            waitingDialog.hide();
            //removeLoading();
            $('#myModal').modal('hide');
        });
    });
</script>
    @*Edit*@
<script type="text/javascript">
    function OnEditar_Grabar() {
       var msg_titulo = 'Mensaje Aquarella!';
        var id = $("#idapl").val();
        var nombre = $("#nombre").val();
        var orden = $("#orden").val();
        var controller = $("#controller").val();
        var action = $("#action").val();

        waitingDialog.show('Espere un momento por favor');
        $.ajax
             ({
                 url: '../Aplicacion/Edit',
                 dataType: "json",
                 type: "POST",
                 data: { apl_id:id,apl_nombre: nombre, apl_orden: orden, apl_controller: controller, apl_action: action },
                 success: function (data, textStatus, XMLHttpRequest) {
                     if (data.estado == '1') {

                         $('#myModal').modal('hide');
                         $('body').removeClass('modal-open');
                         $('.modal-backdrop').remove();

                         $('#lista').load('@Url.Action("ListaAplicacion", "Aplicacion")', {});
                         waitingDialog.hide();
                         toastr.success(data.desmsg, msg_titulo);
                     }
                     else {
                         waitingDialog.hide();
                         toastr.error(data.desmsg, msg_titulo);
                     }
                 },
                 error: function (xhr) {
                     waitingDialog.hide();
                     toastr.error(xhr, msg_titulo);
                 }
             })

    }
</script>
